<Window x:Class="ChooseBackground_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChooseBackground_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image x:Name="Image1" HorizontalAlignment="Left" Height="430" VerticalAlignment="Top" Width="540" Source="/СерыйФон1.png" Stretch="Fill"/>
        <ComboBox x:Name="comboBox1" HorizontalAlignment="Left" Margin="640,40,0,0" VerticalAlignment="Top" Width="120">
            <TextBlock Text="[По умолчанию]"/>
            <TextBlock Text="Monkey"/>
            <TextBlock Text="Bugatti"/>
            <TextBlock Text="Audi"/>
        </ComboBox>
        <Button x:Name="Button1" Content="Замена" HorizontalAlignment="Left" Margin="650,150,0,0" VerticalAlignment="Top" Click="Button1_Click"/>
        <Label x:Name="label1" Content="Чтобы изменить фон нажмите &quot;Замена&quot;" HorizontalAlignment="Left" Margin="555,90,0,0" VerticalAlignment="Top" Height="32" Background="{x:Null}"/>

    </Grid>
</Window>
